<style>
    #design {
        min-height: 40vh;
        width: 100%;
        background-color: rgb(0, 0, 0);
        position: absolute;
        bottom: 0;
    }
    #mainCardDiv {
        position: relative;
        height: 100vh;
        display: flex;
        align-items: center;
        flex-direction: column;
        justify-content: center;
    }
    #project {
        margin: 20px 0px 30px 0px;
        font-size: 40px;
        font-weight: 700;
    }
    #cards {
        display: flex;
        justify-content: space-around;
        align-items: center;
        flex-direction: row;
        overflow: hidden;
        border-radius:8px ;
    }

    .websiteDesign::before {
        background: url("https://cdn.dribbble.com/users/1126935/screenshots/16325356/media/0d45ed1a4ca2cd8274d2aab9990e29ba.png")
            no-repeat center center/cover;
    }
    .mobileDesign::before {
        background: url("https://cdn.dribbble.com/users/1615584/screenshots/16255793/media/2561ba7831df7e30dd7648f3c7d7234d.jpg")
            no-repeat center center/cover;
    }
    .desktopDesign::before {
        background: url("https://cdn.dribbble.com/users/3721290/screenshots/14047605/media/e21056c3bc2440b7688e663ae5c00c10.png")
            no-repeat center center/cover;
    }
    #card {
        width: 30%;
        height: 50vh;
        display: flex;
        flex-direction: column;
        justify-content: end;
        border-radius: 8px;
        position: relative;
        z-index: 2;
        background: hsla(0, 0%, 100%, 0.3);
        overflow: hidden;
    }

    #card::before {
        content: "";
        width: 100%;
        height: 50vh;
        position: absolute;
        z-index: -1;
        top: 0px;
    }

    #card:hover::before {
        filter: blur(5px);
    }

    #cardHeader {
        padding: 0px 10px;
        font-weight: 600;
        color: rgb(255, 255, 255);
    }
    #cardContent {
        padding:0px 10px;
        font-size: 0.8em;
        font-weight: 300;
        height: 60px;
        color: rgb(255, 255, 255);
    }
    #cardButton {
        padding: 0px 10px 10px;
        border-radius: 8px;
        font-size: 0.6em;
        font-weight: 600;
        color: rgb(255, 255, 255);
    }

    @media (width <= 768px) {
        #cards {
            display: flex;
            justify-content: space-around;
            align-items: center;
            flex-direction: column;
        }
        #card {
            margin-bottom: 20px;
            width: 40%;
        }
        #mainCardDiv {
            height: 100%;
        }
    }

    @media (width >=1024px) {
        #card {
            width: 20%;
            height: 50vh;
        }
    }
</style>

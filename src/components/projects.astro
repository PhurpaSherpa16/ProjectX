---
const datas = [
    {title:"Website Design", image:'https://designshack.net/wp-content/uploads/mobile-app-template.jpg', body:"Lorem, ipsum dolor sit amet consectetur adipisicing elit. Optio blanditiis officia itaque, nostrum eum fuga odio quidem"},
    {title:"Mobile Design",image:"https://ithemes.com/wp-content/uploads/2019/08/What-is-Your-Website-Design-Process-Blog-Post-Feature-Image-36119-01.png", body:"Lorem, ipsum dolor sit amet consectetur adipisicing elit. Optio blanditiis officia itaque, nostrum eum fuga odio quidem"},
    {title:"Desktop Design", image:"https://miro.medium.com/v2/resize:fit:1400/1*VbspKTNIZeu22XDOeiFaYg.png", body:"Lorem, ipsum dolor sit amet consectetur adipisicing elit. Optio blanditiis officia itaque, nostrum eum fuga odio quidem"},
];
import Card from "./card.astro";
---


<div id="projectMainDiv">
        <h1>Projects</h1>
    <div id="cardDiv">
        {
            datas.map(data =>(
            <Card  title ={data.title} body={data.body} image={data.image} />
            ))
        }
    </div>
    <div id="design">
    </div>
</div>

<style>
    :root{
        --headerFontSize: 32px;
    }
    #projectMainDiv{
        padding-bottom: 50px;
    }
    #projectMainDiv h1{
        text-align: center;
        font-size: var(--headerFontSize);
        font-weight: 600;
        padding: 50px 0px 50px 0px;
    }

    @media (width <=1800px) {
        #cardDiv{
            display: grid;
            grid-template-columns: auto auto auto;
        }
    }
    @media (width <= 1080px){
        #cardDiv{
            display: grid;
            grid-template-columns: auto auto;
        }
    }

    @media(width <= 600px){
        #cardDiv{
            display: grid;
            grid-template-columns: auto;
        }
    }
</style>